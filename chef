#!/bin/zsh

echo "====================================="
echo "1️⃣  Launch Website Preview (Local)"
echo "2️⃣  Prepare Website for Launch (Build)"
echo "3️⃣  Publish Live Website (Cloudflare)"
echo "4️⃣  Deep Clean & Reset Project"
echo "5️⃣  Sync Local Repository with GitHub"
echo "6️⃣  Sync with Builder.io"
echo "7️⃣  Launch Builder.io Editor (Local)"
echo "====================================="
echo "Enter 1, 2, 3, 4, 5, 6, or 7: "
read option

case $option in
  1)
    npm start
    ;;
  2)
    npm run build
    ;;
  3)
    ./chefdeploy
    ;;
  4)
    rm -rf build node_modules/.cache
    ;;
  5)
    echo "Syncing with GitHub..."
    git fetch origin

    [ -d backups ] && git rm -r --cached backups
    [ -d node_modules/.cache ] && git rm -r --cached node_modules/.cache

    git add .
    git commit -m "Sync with GitHub" || echo "No changes to commit"

    current_branch=$(git rev-parse --abbrev-ref HEAD)
    git push origin "$current_branch"
    ;;
  6)
    echo "Syncing with Builder.io..."
    # Insert Builder.io sync commands here
    ;;
  7)
    echo "Launching Builder.io Editor..."
    ;;
  *)
    echo "Invalid option. Please enter 1-7."
    ;;
esac
