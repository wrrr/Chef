    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.{js,jsx}\""
  },
  "dependencies": {
    "@builder.io/react": "^8.2.8",
    "autoprefixer": "^10.4.15",
    "dotenv": "^17.2.3",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.319.0",
    "nodemailer": "^7.0.9",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.4",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@builder.io/cli": "^1.2.10",
    "eslint-plugin-react-hooks": "^4.6.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:react-hooks/recommended"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
