{
  "name": "chefs2table",
  "version": "1.0.0",
  "description": "Chefs2Table website project",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dev": "PORT=3002 react-scripts start",
    "dev:functions": "wrangler pages dev --local --port=8788",
    "build": "react-scripts build",
    "deploy": "wrangler pages deploy ./build --project-name=chefs2u --commit-dirty=true",
